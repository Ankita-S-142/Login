@{
    ViewData["Title"] = "Register Page";
}

<div class="text-center">
    <h1 class="display-4">Register Page</h1>
</div>

@model WebApplication2.Models.Registration

<form asp-action="Register" asp-controller="Home" method="post">
    <div>
        <label class="UserName">User Name: </label>
        <input class="UserName" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <br />
    <br />
    <div>
        <label class="Email">Email: </label>
        <input class="Email" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <br />
    <div>
        <label class="Password">Password: </label>
        <input class="Password" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />
    <br />
    <div>
        <label class="ConfirmPassword">Confirm Password: </label>
        <input class="ConfirmPassword" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <br />
    <br />
    <button type="submit" class="btn-primary">Register</button>
</form>
